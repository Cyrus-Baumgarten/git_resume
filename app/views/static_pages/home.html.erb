<div class="container-fluid">
	<div class="row-fluid">
		<div class="span8 offset2">
			<div class="title-box-home">
				<h1>Simple Resume Generator</h2>
			</div>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span2 offset2">
			<div class="red-box-home">
				<div class="spacer"></div>
			</div>
		</div>
		
		<div class="span2">
			<div class="blue-box-home">
				<div class="spacer"></div>
			</div>
		</div>
		
		<div class="span2">
			<div class="purple-box">
				<div class="spacer"></div>
			</div>
		</div>
		
		<div class="span2">
			<div class="green-box">
				<div class="spacer"></div>
			</div>
		</div>
	</div>
	
	<div class="row-fluid">
		<div class="span8 offset2">
			<div class="center">
				<h2>Enter your GitHub username to create a quick resume from your public repositories</h2>
			</div>
		</div>
	</div>
	
	<div class="center">
	<%= form_tag score_path, method: :get do %>
		<%= text_field_tag :name %>
		<br>
	<%= submit_tag "See my Resume"%>
	<% end %>
	</div>
	
	<div class="row-fluid">
		<div class="span8 offset2">
			<div class="center">
				<h3>This app doesn't store any data: <a href="https://github.com/Cyrus-Baumgarten/git_resume/blob/master/app/controllers/static_pages_controller.rb">Check the code</a></h3>
			</div>
		</div>
	</div>
</div>